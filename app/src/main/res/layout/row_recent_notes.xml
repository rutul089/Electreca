<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.electreca.tech.components.CustomTextView
        android:id="@+id/tvNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_2"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque cursus ipsum in viverra porta"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dimen_66px"
        android:layout_margin="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:myFont="@string/LIGHT" />

    <com.electreca.tech.components.CustomTextView
        android:id="@+id/tvEmpName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:lineSpacingExtra="@dimen/dimen_2"
        android:layout_marginEnd="@dimen/dimen_10"
        android:text="Tom Smith"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/dimen_66px"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_10"
        app:layout_constraintStart_toStartOf="@+id/tvNotes"
        app:layout_constraintTop_toBottomOf="@+id/tvNotes"
        app:myFont="@string/LIGHT" />

    <com.electreca.tech.components.CustomTextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:lineSpacingExtra="@dimen/dimen_2"
        android:text="10 Desc 2019"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/dimen_66px"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmpName"
        app:layout_constraintEnd_toEndOf="@+id/tvNotes"
        app:layout_constraintTop_toBottomOf="@+id/tvNotes"
        app:myFont="@string/LIGHT" />




</androidx.constraintlayout.widget.ConstraintLayout>